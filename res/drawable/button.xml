<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <padding android:bottom="8dp" android:left="8dp" android:right="8dp" android:top="8dp" />
            <gradient android:angle="270" android:endColor="#aacdcdcd" android:startColor="#ffeeeeee" />

            <corners android:radius="100dp"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <padding android:bottom="10dp" android:left="8dp" android:right="8dp" android:top="4dp" />
            <solid android:color="#aaeeeeee" />
            <corners android:radius="100000dp"/>
        </shape>
    </item>
</selector>